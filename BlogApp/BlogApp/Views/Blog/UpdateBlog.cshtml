@model BlogApp.Models.ViewModels.BlogResponseModel

@{
    ViewData["Title"] = "Update Blog";
}

<h1>Update Blog</h1>

<h4>UpdateBlogRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateBlog">
            <input type="hidden" value="@Model.Data.Id" asp-for="@Model.Data.Id" />
            <div class="form-group">
                <label asp-for="@Model.Data.Title" class="control-label"></label>
                <input asp-for="@Model.Data.Title" name="Title" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Data.Description" class="control-label"></label>
                <input asp-for="@Model.Data.Description" name="Description" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
