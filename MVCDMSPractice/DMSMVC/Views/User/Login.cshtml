@model DMSMVC.Models.DTOs.LoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
</head>
<body>
    <div class="contain">
        <div class="containerbox">
            <div class="container">
                <div class="reg">
                    <h2>Staff login</h2>
                </div>
                <form class="wrapper" method="post">
                    <div class="form-control">
                        <input type="email" asp-for="Email" name="Email" id="" placeholder="Enter your email" required>
                    </div>
                    <div class="form-control">
                        <input type="password" asp-for="Password" name="Password" id="" maxlength="12" minlength="6" placeholder="Enter password" required>
                    </div>
                    <div class="form-control">
                        <input class="submit" type="submit" value="Login">
                    </div>
                    <span class="login">Don't have an account?  <a asp-action="Register" asp-controller="User">Register</a></span>
                </form>
            </div>
        </div>
        @* <div class="container2">
            <img src="~/Images/Tobi.jpg">
        </div> *@
    </div>

</body>
</html>
